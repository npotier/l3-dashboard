<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="user_index" path="/" methods="GET">
        <default key="_controller">CamillePlatformBundle:User:index</default>
    </route>

    <route id="user_show" path="/{id}/show" methods="GET">
        <default key="_controller">CamillePlatformBundle:User:show</default>
    </route>

    <route id="user_new" path="/new" methods="GET|POST">
        <default key="_controller">CamillePlatformBundle:User:new</default>
    </route>

    <route id="user_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">CamillePlatformBundle:User:edit</default>
    </route>

    <route id="user_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">CamillePlatformBundle:User:delete</default>
    </route>

</routes>
