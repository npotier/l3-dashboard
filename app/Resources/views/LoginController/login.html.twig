{% extends "base.html.twig" %}

{% block title %}AppBundle:LoginController:login{% endblock %}

{% block body %}

    <div class="container">
        <h1>Login page</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form class="form-horizontal" action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Nom d'utilisateur:</label>
                <div class="col-sm-10">
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Mot de passe:</label>
                <div class="col-sm-10">
                    <input type="password" id="password" name="_password" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Connexion</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
